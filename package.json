{
  "name": "hypergiant",
  "version": "2.4.0",
  "description": "Hypergiant is a small and simple signal-like event emitter for Node.js and the browser.",
  "main": "index.js",
  "module": "hypergiant.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline",
    "bundle": "rollup -c",
    "bundle:watch": "rollup -c --watch",
    "test": "mocha",
    "prepublish": "npm run bundle && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:robertcorponoi/hypergiant"
  },
  "keywords": [
    "signal",
    "signals",
    "event",
    "events",
    "emit",
    "emitter"
  ],
  "typings": "lib/index.d.ts",
  "author": "Robert Corponoi",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "rollup": "^1.14.5",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "sinon": "^7.3.2",
    "typescript": "^3.5.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@babel/runtime": "^7.4.5"
  }
}
